<h1>All Products</h1>

<% @products.each do |product| %>
  <div class="product-item">
    <p> <%= product.code %> | <%= product.name %> | $<%= product.price %> </p>
    <%=
      link_to(
        'Delete',
        product_path(product),
        data: {confirm: 'Are you sure?'},
        method: :delete
      )
    %>
  </div>
<% end %>
